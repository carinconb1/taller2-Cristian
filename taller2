import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from scipy.stats import norm
import statsmodels.api as sm
import scipy.stats as stats


scale = 3 
n=500 # cambio1
vals = np.random.normal(loc=3, scale=1, size=n) # cambio2

# QQ-plot 
# Cambio

fig = sm.qqplot(data=vals, dist=stats.norm, scale=3, line="45")
plt.title('Q-Q Plot para Distribución Exponencial β = 3')
plt.show()


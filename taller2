import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from scipy.stats import expon
import statsmodels.api as sm
import scipy.stats as stats


scale = 3 
n=1000
vals = np.random.exponential(scale=scale, size=n)
print(vals)

# histograma
count, bins, ignored = plt.hist(x=vals, bins=20, density=True)

scale = 3 
x = np.arange(0, max(bins), 0.001)
plt.plot(x, expon.pdf(x, scale=scale), color="orange", lw=2, label='Función Densidad Exponencial')

plt.title('Tiempos de servicio - Distribución Exponencial')
plt.xlabel('Valores')
plt.ylabel('Densidad')
plt.legend()
plt.show()

